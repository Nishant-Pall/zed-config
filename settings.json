// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "title_bar": {
    "show_menus": true,
    "show_branch_icon": true
  },
  "context_servers": {},
  "notification_panel": {
    "dock": "left"
  },
  "agent": {
    "enabled": true
  },
  "debugger": {
    "dock": "left"
  },
  "project_panel": {
    "dock": "left",
    "sticky_scroll": true
  },
  "ui_font_size": 14,
  "git_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "left"
  },
  "toolbar": {
    "breadcrumbs": true,
    "selections_menu": true
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "relative_line_numbers": "enabled",
  "icon_theme": "Material Icon Theme",
  "vim_mode": true,
  "buffer_font_size": 14.0,
  "ui_font_family": "Ubuntu Mono",
  "show_completions_on_input": true,
  "buffer_font_family": "Ubuntu Mono",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark Hard"
  },
  "terminal": {
    "dock": "bottom",
    "cursor_shape": "block",
    "font_family": "Ubuntu Mono"
  },
  "colorize_brackets": true,
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Vue.js": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Python": {
      "format_on_save": "on",
      "language_servers": ["pyright"],
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "language-you-want-to-disable-linked-editing-for": {
      "linked_edits": true
    }
  },
  "hover_popover_enabled": true,
  "features": {
    "edit_prediction_provider": "none"
  },
  "show_completion_documentation": true,
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    },
    "cargo": null
  },
  "unnecessary_code_fade": 0.6,
  "minimap": { "display_in": "active_editor" },
  "dev": {
    "lsp_document_colors": "background"
  },
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "never"
  },
  "experimental.theme_overrides": {
    "editor.background": "#1d2020",
    "title_bar.background": "#282828",
    "panel.background": "#282828",
    "tab_bar.background": "#282828",
    "status_bar.background": "#282828",
    "editor.document_highlight.bracket_background": "#5c5959"
    // "tab.active_background": "#282828",
    // "tab.inactive_background": "#1d2021"
    // "editor.document_highlight.read_background": "#5c5959"
  },
  "sticky_scroll": {
    "enabled": true
  }
}
